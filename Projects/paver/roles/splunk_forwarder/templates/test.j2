{% for instance in gds_instances.keys() %}
{% if gds_instances[instance]['type'] == 'mysql' %}
# {{ instance }}
[monitor:///var/groupon/percona/{{ instance }}/log/error.log]
index = main 
sourcetype = gds
disabled = false
{% endif %}
{% if gds_instances[instance]['type'] == 'postgresql' %}
# {{ instance }}
[monitor:///var/service/postgresql-{{ gds_cluster }}-{{ instance }}/log/main/current]
index = main
sourcetype = gds
disabled = false
{% endif %} 
{% endfor %}