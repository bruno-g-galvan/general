#!/bin/sh --
time_stamp=$(date +%Y_%m_%d)

{% for snc1_instance in snc1_instances %}
/bin/mkdir /grpn/pgbadger/snc1/{{ snc1_instance }}/$time_stamp/
/usr/local/bin/pgbadger  -p '%m|%r|%d|%u|%c|%p|%x|%i|%s|' /grpn/pgbadger/snc1/{{ snc1_instance }}/*.log -o /grpn/pgbadger/snc1/{{ snc1_instance }}/$time_stamp/{{ snc1_instance }}-$time_stamp.html
/bin/rm -rf /grpn/pgbadger/snc1/{{ snc1_instance }}/*.log
{% endfor %}


